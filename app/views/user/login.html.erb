<div id="wrapper">
  <div id="top_logo">
    <% if FileTest.exists?("#{RAILS_ROOT}/public/uploads/image/institute_logo.jpg") %>
      <%= image_tag  "/uploads/image/institute_logo.jpg" ,:width => "400",  :height=>"107" %>
    <% else %>
      <%= image_tag  "/images/application/app_adequate_logo.jpg" ,:width => "220",  :height=>"127" %>

    <% end %>
  </div>

  <div id="help_top">
    <div id="help_link"><a href="http://www.adequatewebsolution.com/" target="_blank">Help!</a></div>
  </div>

  <div id="login_area_bg">

    <% form_for :user do |form| %>

      <div id="login_area">
        <label for="username">Username</label>
        <div id="username_textbox_bg">
          <%= form.text_field :username,
            :maxlength => 40%>
        </div>

        <label for="password">Password</label>
        <div id="password_textbox_bg">
          <%= form.password_field :password %>
        </div>

        <div id="checkbox_area">
          <input type="checkbox" id="remember" />
          <label for="remember">Remember me</label>
        </div>

        <div id="submit_area">
          <%= submit_tag "Login", :class => "submit" %>
        </div>


        <% if !flash.empty? %>
          <div id="notice"><%= flash[:notice] %></div>
        <% end %>

      </div>
    </div>
  <% end %>


<script type="text/javascript">
document.getElementById('user_username').focus();
 </script>
